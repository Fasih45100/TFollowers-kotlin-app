<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conssearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/search_bar_in_SF"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/searchview_background"
        app:iconifiedByDefault="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/setting_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Search Twitter" />

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:src="@drawable/settings"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="4dp"
        android:background="#BAB8B8"
        app:layout_constraintTop_toBottomOf="@id/setting_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>

